<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:id="@+id/scrol_item_Layout"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/scroll_image_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:id="@+id/scroll_item_name"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:textAppearanceMedium"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:id="@+id/scroll_old_price"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:textAppearance="?android:textAppearanceMedium"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:id="@+id/scroll_new_price"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:textAppearanceMedium"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/Discount"
            android:id="@+id/scroll_new_Discount"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:textAppearanceMedium"
            />

        <Button
            android:id="@+id/scroll_add_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to list" />

    </LinearLayout>
</LinearLayout>